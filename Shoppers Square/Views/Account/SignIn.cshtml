@model LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login Page";

}
    <section class="vh-100 mb-5" style="background-color: #f8f9fa;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-80">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5">
                            <h3 class="text-center mb-5"> Sign in</h3>
                            @if (@ViewBag.ErrorTitle != null)
                            {
                                <div class="alert alert-success">@ViewBag.ErrorTitle</div>
                            }
                            @if (@ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                            }
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <form method="post" asp-action="SignIn" asp-controller="Account">
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" type="text" class="form-control" id="txtEmail" placeholder="Enter email">
                                    <span asp-validation-for="Email" class="text-danger form-text"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" type="password" class="form-control" id="txtPassword" placeholder="Enter Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label asp-for="RememberMe">
                                            <input asp-for="RememberMe" />
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    Forgot Password? <a asp-action="ForgotPassword">Click Here</a>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>