@model OrderStatusModel
@{
    Layout = "_Customer";
    ViewData["Title"] = "Order Status";
}
<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Order Details</h6>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="post">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="OrdersId">Order Id</label>
                                <input type="hidden" asp-for="OrderId" />
                                <input asp-for="OrdersId" class="form-control" readonly placeholder="Order Id">
                                <span asp-validation-for="OrdersId" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="OrderStatus">Status</label><br />
                                <div style="padding:6px;border:1px solid #ccc;border-radius:5px;">
                                    <div class="form-check-inline">
                                        <label class="form-check-label">
                                            <input type="radio" value="Return" asp-for="OrderStatus" class="form-check-input"> Return
                                        </label>
                                    </div>
                                    <div class="form-check-inline">
                                        <label class="form-check-label">
                                            <input type="radio" value="Cancel" asp-for="OrderStatus" class="form-check-input"> Cancel
                                        </label>
                                    </div>
                                    <div class="form-check-inline">
                                        <label class="form-check-label">
                                            <input type="radio" value="Refund" asp-for="OrderStatus" class="form-check-input"> Refund
                                        </label>
                                    </div>
                                    <div class="form-check-inline">
                                        <label class="form-check-label">
                                            <input type="radio" value="Replacement" asp-for="OrderStatus" class="form-check-input"> Replacement
                                        </label>
                                    </div>
                                </div>
                                <span asp-validation-for="OrderStatus" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label asp-for="Description">Reason</label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
