@model RoleViewModel

@{
    Layout = "_Admin";
    ViewData["Title"] = "Add Role";
}
<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Create Role</h6>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="POST">
                        <input type="hidden" id="txtId" name="txtId" />
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label asp-for="RoleName">Create Role</label>
                                <input asp-for="RoleName" type="text" class="form-control" placeholder="Enter Role Name">
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" id="SaveRole" value="Create Role" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>