@model List<ProductModel>

@{
    Layout = "_Admin";
    ViewData["Title"] = "List Products";
}

<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">List Products</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tr>
                                <th>S.No</th>
                                <th>Sub Name</th>
                                <th>Product</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>View</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                            @if (Model.Any())
                            {
                                var counter = 0;
                                foreach (var role in Model)
                                {
                                    <tr>
                                        <td>
                                            @(++counter)
                                        </td>
                                        <td>
                                            @role.SubCategory.SubCategoryName
                                        </td>
                                        <td>
                                            @role.ProductName
                                        </td>
                                        <td>
                                            <img src="@role.UrlImage" class="rounded" height="50"/>
                                        </td>
                                        <td>
                                            @if (@role.isActive == 0)
                                            {
                                                <span class="btn-danger rounded-pill badge-pill btn-sm">Pending</span>
                                            }
                                            else
                                            {
                                                <span class="btn-success rounded-pill badge-pill btn-sm">Activated</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="ViewProducts" asp-controller="Admin" asp-route-id="@role.Id" style="cursor:pointer;" class="btn btn-circle btn-success">
                                                <i style="color:white;" class="fa fa-eye"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="EditProducts" asp-controller="Admin" asp-route-id="@role.Id" style="cursor:pointer;" class="btn btn-circle btn-success">
                                                <i style="color:white;" class="fa fa-pen"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="DeleteProducts" asp-controller="Admin" asp-route-id="@role.Id" style="cursor:pointer;" class="btn btn-circle btn-danger">
                                                <i style="color:white;" class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>