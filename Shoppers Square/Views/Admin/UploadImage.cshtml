@model UploadImageModel
@{
    Layout = "_Admin";
    ViewData["Title"] = "Upload Images";
}

<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Upload Product Images</h6>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form enctype="multipart/form-data" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="ProductId">Select Product</label>
                                <select asp-for="ProductId"
                                        class="custom-select" asp-items="ViewBag.ListProducts">
                                </select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="ProductImages">Choose Product Images</label>
                                <div class="custom-file">
                                    <input asp-for="ProductImages" id="customFile" class="custom-file-input">
                                    <label class="custom-file-label" for="customFile">Choose File</label>
                                </div>
                                <span asp-validation-for="ProductImages" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Upload Photo" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>