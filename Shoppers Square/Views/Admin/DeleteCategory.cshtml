@model CategoryModel

@{
    Layout = "_Admin";
    ViewData["Title"] = "Delete Category";
}
<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Delete Product Category</h6>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="POST">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="CategoryName">Category Name</label>
                                <input readonly asp-for="CategoryName" type="text" class="form-control">
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Slug">Category Slug</label>
                                <input readonly type="text" asp-for="Slug" class="form-control">
                                <span asp-validation-for="Slug" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="isActive">Category Status</label>
                                @if (Model.isActive == 0)
                                {
                                    <input readonly value="Pending" type="text" class="form-control">
                                }
                                else
                                {
                                    <input readonly value="Active" type="text" class="form-control">
                                }
                            </div>
                            <div class="form-group col-md-6" style="margin-top:31px">
                                <input type="submit" value="Delete Category" class="btn btn-danger">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

